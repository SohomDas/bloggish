<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">
			Create a new CampGround Form
		</h1>
	<div style="width:30%; margin:25px auto;">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="Name of the Blog">
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="image url">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" placeholder="Content(Maximum: 1000 words)">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">
					Submit!
				</button>
			</div>			
		</form>
		<a href="/campgrounds">Back</a>
	</div>
		

		
		
	</div>
</div>

